        }
        body.light-mode .project-card {
            border: 1px solid #111;
        }
        body.light-mode h1{
            border-bottom: 1px solid #111;
        }
        body.light-mode h2 {
            border-bottom: 1px solid #111;
        }
        body.light-mode h3 {
            border-bottom: 1px solid #111;
        }
        body.light-mode a {
            color: #111;
            border-bottom: 1px dotted #111;
        }
        body.light-mode a:hover {
            border-bottom: 1px solid #111;
        }
        body.light-mode .number { color: #9249f8; }
        body.light-mode .keyword { color: #fe46ae; }
        body.light-mode .string { color: #f01313; }
        body.light-mode .comment { color: #888; }
        body.light-mode .tag {
            text-decoration: none;
            border-bottom: none;
        }

        .tag {
            font-size: 0.8rem;
            padding: 0.3rem 0.8rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            background-color: rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
            text-decoration: none;
            border-bottom: none;
        }

        /* Dark Mode */

        body.dark-mode {
            background-color: #111111; /* Dark background for dark mode */
            color: #ffffff; /* White text */
        }

        

        /* Toggle Switch Styling */
        .switch {
            position: fixed;
            top: 10px;
            right: 20px;
        }

        .switch input {
            display: none;
        }

        .slider {
            position: relative;
            display: inline-block;
            background-color: #ccc;
            height: 25px;
            width: 50px;
            border-radius: 12px;
        }

        .slider:before {
            content: '';
            position: absolute;
            height: 20px;
            width: 20px;
            border-radius: 50%;
            background-color: white;
            top: 2.5px;
            left: 2.5px;
            transition: 0.3s;
        }

        input:checked + .slider:before {
            transform: translateX(24px);
        }

        /* Emoji Switch Styling */
        .slider .emoji {
            position: absolute;
            top: -1px;
            left: 25px;
            font-size: 18px;
            transition: 0.3s;
        }

        input:checked + .slider .emoji {
            content: 'ðŸŒž';
            left: 4px;
        }
        body {
            font-family: monospace;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            line-height: 1.6;
            font-size: 14px;
        }
        h1, h2, h3 {
            border-bottom: 1px solid #fff;
            padding-bottom: 10px;
            margin-top: 30px;
        }
        a {
            color: #fff;
            text-decoration: none;
            border-bottom: 1px dotted #fff;
        }
        a:hover {
            border-bottom: 1px solid #fff;
        }
        .nav {
            margin: 20px 0;
        }
        .nav a {
            margin-right: 20px;
        }
        .code-block {
            background-color: #222;
            padding: 10px;
            overflow-x: auto;
            margin: 10px 0;
        }
        .comment { color: #888; }
        .keyword { color: #ff79c6; }
        .string { color: #f1fa8c; }
        .number { color: #bd93f9; }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 0.8em;
        }
        .top-section, .progress-bar, .project-card {
            border: 1px solid #fff;
        }
        .project-card {
            border: 1px solid #fff;
            padding: 20px;
            margin-bottom: 30px;
        }
        /* Additional Styles */
        .top-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }
        .toggle-container {
            margin: 20px 0;
        }
        .progress-bar {
            background-color: #555;
            height: 20px;
            margin-top: 10px;
            position: relative;
            width: 100%;
        }
        .progress {
            background-color: #4CAF50;
            height: 100%;
            width: 0;
        }
        .progress-bar span {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            color: #000;
            font-weight: bold;
            line-height: 20px;
        }
        
        .header-container {
            display: grid;
            grid-template-columns: 3fr 1fr;
            border: 1px solid #ffffff;
            margin-bottom: 20px;
        }
        .header-left {
            padding: 10px;
            border-right: 1px solid #ffffff;
        }
        
        .header-right {
            display: grid;
            grid-template-columns: 1fr 1fr;
        }
        .header-right div {
            padding: 5px;
            border-bottom: 1px solid #ffffff;

        }
        .header-right div:nth-child(odd) {
            border-right: 1px solid #ffffff;
        }
        .header-right div:nth-child(3), .header-right div:nth-child(4) {
            border-bottom: none;

        }
        
        h1, h2, p {
            margin: 0;
        }
        .graph-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .responsive-graph {
            width: 100%;
            height: auto;
            max-width: 100%;
            display: block;
        }
        figcaption {
            text-align: center;
            font-style: italic;
            margin-top: 10px;
        }

        /* New styles for embedded content */
        .dashboard-embed {
            position: relative;
            max-width: 100%;
            margin: auto;
            overflow: hidden;
        }

        .plotly-gallery {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }
        
        .plotly-gallery iframe {
            min-width: 100%;
            box-sizing: border-box;
        }

        .demo-container {
            position: relative;
            width: 100%;
            margin: 1.5rem 0;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            overflow: hidden;
            background-color: rgba(0, 0, 0, 0.05);
        }

        .demo-video {
            width: 100%;
            height: auto;
            display: block;
        }

        .demo-gif {
            width: 100%;
            height: auto;
            display: block;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .dashboard-embed iframe {
                min-height: 300px;
            }
            
            .projects-grid {
                grid-template-columns: 1fr;
            }
            
            .project-card {
                margin-bottom: 2rem;
            }
        }

        .project-links {
            display: flex;
            gap: 1rem;
        }
        

        .tag {
            font-size: 0.7rem;
            padding: 0.2rem 0.6rem;
            border: 1px solid var(--border-color);
            border-radius: 12px;
            background-color: rgba(255, 255, 255, 0.05);
        }

        /* Loading state for embedded content */
        .loading-text {
            display: block;
            content: 'Loading...';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: monospace;
            color: var(--text-color);
        }

        .dashboard-embed {
            position: relative;
            max-width: 100%;
            margin: auto;
            overflow: hidden;
        }
        
        .plotly-gallery, .image-gallery {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }
        
        .plotly-gallery iframe, .image-gallery img {
            min-width: 100%;
            box-sizing: border-box;
        }
        
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: 20px;
            height: 20px;
            padding: 0;
            margin-top: -10px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 50%;
            background-color: rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
        }
        
        .next {
            right: 10px;
        }
        
        .prev {
            left: 10px;
        }
        
        .prev:hover, .next:hover {
            background-color: rgba(0,0,0,0.5);
        }
        
        .slide-indicator {
            text-align: center;
            position: absolute;
            bottom: 10px;
            width: 100%;
        }

        .slide-indicator span {
            cursor: pointer;
            height: 10px;
            width: 10px;
            margin: 0 2px;
            background-color: rgba(0,0,0,0.3);
            border-radius: 50%;
            display: inline-block;
            transition: background-color 0.6s ease;
        }
        
        .active, .slide-indicator span:hover {
            background-color: rgba(0,0,0,0.8);
        }

        /* New styles for collapsible research section */
        .research-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease-out;
        }
        
        .research-content.expanded {
            max-height: 2000px;
            transition: max-height 0.5s ease-in;
        }

        .research-header {
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .research-header:hover {
            opacity: 0.8;
        }

        .research-header h2 {
            border-bottom: 1px solid #fff;
            padding-bottom: 10px;
            margin: 0;
            flex: 1;
        }

        .research-summary {
            font-size: 0.9em;
            color: rgba(255, 255, 255, 0.7);
            margin-top: 0.5rem;
            font-style: italic;
        }

        .toggle-icon {
            transition: transform 0.3s ease;
            margin-left: 1rem;
        }

        .toggle-icon.expanded {
            transform: rotate(180deg);
        }

        /* Enhanced project card styles */
        .projects-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            margin-top: 2rem;
        }

        .project-card {
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            background-color: rgba(255, 255, 255, 0.02);
            cursor: pointer;
        }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .project-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .project-title {
            margin-bottom: 1rem;
        }

        .project-title h3 {
            margin: 0;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .project-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .tag {
            font-size: 0.8rem;
            padding: 0.3rem 0.8rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            background-color: rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
            text-decoration: none;
            border-bottom: none;
        }

        .tag:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        .project-content {
            padding: 1.5rem;
        }

        .project-description {
            margin-bottom: 1.5rem;
        }

        .project-features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
            padding: 0.5rem;
            background-color: rgba(255, 255, 255, 0.02);
            border-radius: 4px;
        }

        .feature-icon {
            color: #4CAF50;
            font-size: 1.2em;
        }

        .key-points {
            margin-top: 1rem;
        }

        .key-points ul {
            list-style-type: none;
            padding: 0;
        }

        .key-points li {
            margin: 0.5rem 0;
            padding-left: 1.5rem;
            position: relative;
        }

        .key-points li:before {
            content: "â†’";
            position: absolute;
            left: 0;
            color: #4CAF50;
        }

        /* Remove typing effect styles */
        .typing-text {
            white-space: nowrap;
            overflow: hidden;
        }

        /* Enhanced navigation styles */
        .menu-link {
            position: relative;
            padding: 5px 10px;
        }

        .menu-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 1px;
            bottom: 0;
            left: 50%;
            background-color: currentColor;
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .menu-link:hover::after {
            width: 100%;
        }

        /* Back to top button */
        .back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #fff;
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 1000;
        }

        .back-to-top.visible {
            opacity: 1;
        }

        .back-to-top:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        /* Landing page styles */
        .landing-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-color: #111111;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            transition: opacity 0.5s ease-out;
        }

        .intro-container {
            text-align: center;
            color: #fff;
            font-family: monospace;
            font-size: 1.2em;
            max-width: 600px;
            padding: 0 20px;
        }

        .status-text {
            position: relative;
            display: inline-block;
        }

        .status-text::before,
        .status-text::after {
            content: '"';
            position: absolute;
            font-size: 2em;
            opacity: 0.5;
        }

        .status-text::before {
            left: -20px;
            top: -10px;
        }

        .status-text::after {
            right: -20px;
            bottom: -10px;
        }

        .date-text {
            margin-top: 1rem;
            font-size: 0.9em;
            opacity: 0.8;
        }

         .cursor {
            display: inline-block;
            width: 2px;
            height: 1em;
            background-color: #fff;
            margin-left: 2px;
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }

        /* Tag styling */
        .tag, a .tag {
            text-decoration: none !important;
            border-bottom: none !important;
        }
    </style>
    {% block pageStyles %}{% endblock %}
