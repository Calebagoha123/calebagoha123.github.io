---
layout: base
---
<style>
    .blog-post {
        font-family: monospace;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .post-header {
        position: relative;
        margin-bottom: 2rem;
    }

    .title-wrapper {
        position: relative;
        display: inline-block;
    }

    .back-link {
        font-family: monospace;
        font-size: 16px;
        text-decoration: none;
        border-bottom: 1px dotted currentColor !important;
        position: absolute;
        left: -1.5em;
        top: 0;
        line-height: 1;
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }

    .back-link:hover {
        opacity: 1;
    }

    .title-container {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        width: 100%;
        border-bottom: 1px solid currentColor;
        padding-bottom: 10px;
    }

    .blog-date {
        font-size: 0.9em;
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
    }

    .blog-post h2 {
        text-transform: uppercase;
        margin: 0;
        font-family: monospace;
        display: inline-block;
        border-bottom: none;
        padding-bottom: 0;
    }

    .blog-post ul {
        list-style: none;
        padding-left: 1.5em;
    }

    .blog-post ul li {
        position: relative;
    }

    .blog-post ul li::before {
        content: "■";
        position: absolute;
        left: -1.5em;
        color: currentColor;
        line-height: inherit;
        font-size: 0.7em;
    }
</style>

<article class="blog-post">
    <div class="post-header">
        <div class="title-container">
            <div class="title-wrapper">
                <a href="/blog" class="back-link">←</a>
                <h2>{{ title }}</h2>
            </div>
            <p class="blog-date">{{ page.date | formatDate("DD-MM-YY") }}</p>
        </div>
    </div>
    {{ content | safe }}
</article>