    transition: border-color 0.18s ease, background 0.18s ease;
    display: flex;
    flex-direction: column;
    gap: 10px;
    min-height: 150px;
    box-sizing: border-box;
    cursor: default; /* not clickable as a whole card */
  }

  .featured-card-grid .card:hover {
    /* no visual movement or color change on hover; border is already red */
  }

  /* Disable tag hover interactions inside this scoped section so hashtags don't imply interactivity */
  .featured-card-grid .tag {
    cursor: default;
  }

  .featured-card-grid .tag:hover,
  .featured-card-grid .tag:active,
  .featured-card-grid .tag:focus {
    background: transparent !important;
    color: var(--muted) !important;
    transform: none !important;
    border-color: rgba(255,255,255,0.08) !important;
  }

  .featured-card-grid .card h3 {
    font-size: 16px;
    margin: 0;
    color: var(--text);
  }

  .featured-card-grid .card p {
    color: var(--muted);
    font-size: 13px;
    flex: 1;
    margin: 0;
  }

  .featured-card-grid .tags {
