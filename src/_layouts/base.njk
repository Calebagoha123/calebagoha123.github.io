    <script>
        // Podcast player with RSS feed
        (function() {
            const RSS_FEED_URL = 'https://anchor.fm/s/f6f3f68c/podcast/rss';
            
            async function fetchLatestEpisode() {
                try {
                    // Try direct fetch first
                    let response;
                    let xmlText;
                    try {
                        response = await fetch(RSS_FEED_URL);
                        xmlText = await response.text();
                    } catch (e) {
                        // Fallback to CORS proxy
                        response = await fetch(`https://api.allorigins.win/get?url=${encodeURIComponent(RSS_FEED_URL)}`);
                        const data = await response.json();
                        xmlText = data.contents;
                    }
                    
                    const parser = new DOMParser();
                    const xmlDoc = parser.parseFromString(xmlText, 'text/xml');
                    
                    const item = xmlDoc.querySelector('item');
                    if (!item) throw new Error('No item found');
                    
                    const title = item.querySelector('title')?.textContent || 'Latest Episode';
                    const enclosure = item.querySelector('enclosure');
                    const duration = item.querySelector('itunes\\:duration')?.textContent || item.querySelector('duration')?.textContent || '';
                    const audioUrl = enclosure?.getAttribute('url');
                    
                    if (audioUrl) {
                        document.getElementById('podcast-title').textContent = title;
                        document.getElementById('podcast-duration').textContent = duration ? `(${duration})` : '';
                        const audio = document.getElementById('podcast-audio');
                        const source = audio.querySelector('source');
                        source.src = audioUrl;
                        audio.load();
                    } else {
                        throw new Error('No audio URL found');
                    }
                } catch (error) {
                    console.error('Error fetching podcast:', error);
                    // Fallback to static content
                    document.getElementById('podcast-title').textContent = 'Ep. 44 2026...7';
                    document.getElementById('podcast-duration').textContent = '(01:01:22)';
                    const audio = document.getElementById('podcast-audio');
                    const source = audio.querySelector('source');
                    source.src = 'https://anchor.fm/s/f6f3f68c/podcast/play/113353899/https%3A%2F%2Fd3ctxlq1ktw2nl.cloudfront.net%2Fstaging%2F2026-0-1%2F17e51835-11b1-090c-e5f1-ec78537265d7.mp3';
                    audio.load();
                }
            }
            
            function formatTime(seconds) {
                if (!isFinite(seconds)) return '0:00';
                const mins = Math.floor(seconds / 60);
                const secs = Math.floor(seconds % 60);
                return `${mins}:${secs.toString().padStart(2, '0')}`;
            }
            
            function initPodcastPlayer() {
                const audio = document.getElementById('podcast-audio');
                const playBtn = document.getElementById('podcast-play-btn');
                const progressBar = document.getElementById('podcast-progress-bar');
                const progressFill = document.getElementById('podcast-progress-fill');
                const timeDisplay = document.getElementById('podcast-time');
                
                function updateProgress() {
                    if (!audio.duration) return;
                    const percent = (audio.currentTime / audio.duration) * 100;
                    progressFill.style.width = percent + '%';
                    timeDisplay.textContent = `${formatTime(audio.currentTime)} / ${formatTime(audio.duration)}`;
                }
                
                function togglePlay() {
                    if (audio.paused) {
                        audio.play();
                        playBtn.textContent = '‚è∏';
                    } else {
                        audio.pause();
                        playBtn.textContent = '‚ñ∂';
                    }
                }
                
                playBtn.addEventListener('click', togglePlay);
                
                audio.addEventListener('timeupdate', updateProgress);
                audio.addEventListener('loadedmetadata', updateProgress);
                audio.addEventListener('ended', () => {
                    playBtn.textContent = '‚ñ∂';
                    progressFill.style.width = '0%';
                });
                
                progressBar.addEventListener('click', (e) => {
                    if (!audio.duration) return;
                    const rect = progressBar.getBoundingClientRect();
                    const percent = (e.clientX - rect.left) / rect.width;
                    audio.currentTime = percent * audio.duration;
                });
            }
            
            fetchLatestEpisode();
            initPodcastPlayer();

            // Podcast toggle (accordion) wiring
            (function() {
                const toggle = document.getElementById('podcast-toggle');
                const header = document.getElementById('header-podcast');
                const panel = document.getElementById('podcast-panel');
                if (!toggle || !header || !panel) return;

                // start collapsed (user clicks to open)
                header.classList.remove('expanded');
                toggle.setAttribute('aria-expanded', 'false');

                toggle.addEventListener('click', () => {
                    const expanded = header.classList.toggle('expanded');
                    toggle.setAttribute('aria-expanded', expanded ? 'true' : 'false');
                });
            })();
        })();
        
        // Landing overlay removal; site is dark-mode only
        (function() {
            // Ensure 'dark-mode' class is present for consistent styling
            if (!document.body.classList.contains('dark-mode')) {
                document.body.classList.add('dark-mode');
            }

            // Ensure any landing overlay is hidden after load (GitHub Pages sometimes serves the built HTML without client-side removal)
            window.addEventListener('DOMContentLoaded', () => {
                const landing = document.querySelector('.landing-page');
                if (landing) {
                    // fade out and remove
                    landing.style.opacity = '0';
                    landing.style.pointerEvents = 'none';
                    setTimeout(() => landing.remove(), 600);
                }
            });
        })();

        // Robust delegation for menu anchors with hashes: handles .menu-item and .menu-link
        (function() {
            document.addEventListener('click', function(e) {
                const anchor = e.target.closest && e.target.closest('.menu-item, .menu-link');
                if (!anchor) return;
                const href = anchor.getAttribute('href') || '';
                const hashIndex = href.indexOf('#');
                if (hashIndex === -1) return; // no hash -> nothing to do

                // Resolve the URL relative to current origin to normalize pathnames
                let url;
                try {
                    url = new URL(href, window.location.origin);
                } catch (err) {
                    // malformed href, let default behavior occur
                    return;
                }

                const targetId = href.substring(hashIndex + 1);
                const targetPath = url.pathname || '/';
                const isTargetIndex = targetPath === '/' || targetPath === '/index';
                const onIndex = window.location.pathname === '/' || window.location.pathname === '/index';

                // If the link targets another page entirely, allow normal navigation
                if (!isTargetIndex && targetPath !== window.location.pathname) {
                    return; // normal navigation
                }

                // If the link points to the index but we're currently not on it, navigate so the anchor resolves
                if (isTargetIndex && !onIndex) {
                    window.location.href = href;
                    return;
                }

                // Same-page anchor: smooth scroll
                e.preventDefault();
                const targetElement = document.getElementById(targetId);
                if (targetElement) {
                    // If there's a fixed header overlapping sections, consider adjusting scroll by an offset
                    targetElement.scrollIntoView({ behavior: 'smooth' });
                    try { history.replaceState(null, '', '#' + targetId); } catch (err) { /* ignore */ }
                } else {
                    // Fallback: navigate
                    window.location.href = href;
                }
            });
        })();
    </script>

