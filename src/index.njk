        { id: "pattern-language", title: "A Pattern Language", author: "Christopher Alexander et al.", color: "#8C664E", review: "Dense but rewarding: an architecture book that reads like a toolkit for humane design." },
        { id: "cats-cradle", title: "Cat's Cradle", author: "Kurt Vonnegut", color: "#6AA06E", review: "Sharp satire and brisk pacing â€” Vonnegut at his brilliant, absurd best." },
        { id: "tao-te-ching", title: "Tao Te Ching", author: "Lao Tzu", color: "#6B7BA2", review: "Short, paradoxical verses that remain surprisingly useful for quiet thought and action." },
        { id: "flow", title: "Flow", author: "Mihaly Csikszentmihalyi", color: "#A38EA8", review: "An influential synthesis on optimal experience and concentration." },
        { id: "everlasting-meal", title: "An Everlasting Meal", author: "Tamar Adler", color: "#C08A5B", review: "Practical and soulful cooking; a book about how to think while you feed yourself." }
      ];
    }

    // select the row element (distinct id) so the section header stays on its own line
    const shelf = document.getElementById('bookshelf-row');
    if (!shelf) return;

    function shade(hex, percent) {
      const f = hex.slice(1);
      const t = percent < 0 ? 0 : 255;
      const p = Math.abs(percent) / 100;
      const R = parseInt(f.substring(0,2),16);
      const G = parseInt(f.substring(2,4),16);
      const B = parseInt(f.substring(4,6),16);
      const newR = Math.round((t - R) * p) + R;
      const newG = Math.round((t - G) * p) + G;
      const newB = Math.round((t - B) * p) + B;
      return `rgb(${newR},${newG},${newB})`;
    }

    function escapeHtml(s) {
      return String(s).replace(/[&<>"']/g, function (m) {
        return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m];
      });
    }

    // Use a reviews base path that works when the site is served from a web server
    // and when opened directly via the file:// protocol (use relative path in that case).
    const reviewsBase = (typeof window !== 'undefined' && window.location && window.location.protocol === 'file:') ? './reviews/' : '/reviews/';

    async function loadReviewMarkdown(filename) {
      // If `filename` is a markdown filename (e.g. "foo.md"), Eleventy will render
      // it into a page at `/reviews/foo/` (index.html). Try fetching the rendered
      // HTML first (works when serving `_site/`), fall back to trying the raw md
      // filename for setups that copy markdown into `_site` (rare).
      const slug = String(filename).replace(/\.md$/i, '');
      let candidates;
      if (reviewsBase.startsWith('./') && typeof window !== 'undefined' && window.location && window.location.protocol === 'file:') {
        // When opened via file://, fetch the explicit index.html inside the directory
        candidates = [reviewsBase + slug + '/index.html', reviewsBase + filename];
      } else {
        candidates = [reviewsBase + slug + '/', reviewsBase + filename];
      }

      for (const p of candidates) {
        try {
          const res = await fetch(p);
          if (!res.ok) continue;
          const text = await res.text();
          return text;
        } catch (e) {
          // try next candidate
        }
      }
      return null;
    }

    function createTile(book) {
      const tile = document.createElement('div');
      tile.className = 'tile';
      tile.setAttribute('role', 'listitem');
      tile.setAttribute('tabindex', '0');
      tile.dataset.bookId = book.id;

      const cover = document.createElement('div');
      cover.className = 'cover';

      let inner;

      if (book.cover) {
        inner = document.createElement('img');
        inner.src = book.cover;
        inner.alt = book.title + ' cover';
        inner.loading = 'lazy';
        inner.style.width = '100%';
        inner.style.height = '100%';
        inner.style.objectFit = 'cover';
        inner.style.display = 'block';
      } else {
        inner = document.createElement('div');
        inner.className = 'inner';
        inner.style.background = `linear-gradient(180deg, ${book.color}, ${shade(book.color, -18)})`;
        inner.innerHTML = `
          <div style="padding:6px;font-size:11px;line-height:1.2;">
            ${escapeHtml(book.title)}
          </div>
        `;
      }
      const overlay = document.createElement('div');
      overlay.className = 'overlay';

      cover.appendChild(inner);
      cover.appendChild(overlay);

      tile.appendChild(cover);

      const cap = document.createElement('div');
      cap.className = 'caption';
      cap.innerHTML = `<div class="title">${escapeHtml(book.title)}</div><div class="author">${escapeHtml(book.author)}</div>`;
      tile.appendChild(cap);

      tile.addEventListener('click', () => openModal(book));
      tile.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          openModal(book);
        }
      });

      return tile;
    }

    // render
    books.forEach(b => shelf.appendChild(createTile(b)));

    // modal
    const modal = document.getElementById('bookshelf-modal');
    const modalTitle = document.getElementById('bookshelf-modal-title');
    const modalAuthor = document.getElementById('bookshelf-modal-author');
    const modalReview = document.getElementById('bookshelf-modal-review');
    let lastFocused = null;

    async function openModal(book) {
      try {
        lastFocused = document.activeElement;

        // show title/author immediately so UI feels responsive
        modalTitle.textContent = book.title;
        modalAuthor.textContent = book.author;
        modalReview.textContent = 'Loading reviewâ€¦'; // temporary placeholder

        // reveal modal
        modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';

        // try to fetch markdown review (book.review should be filename like "the-beginning-of-infinity.md")
        let markdown = '';
        if (book.review) {
          try {
            markdown = await loadReviewMarkdown(book.review);
          } catch (err) {
            console.warn('[bookshelf] failed loading review', book.review, err);
            markdown = null;
          }
        }

        if (markdown) {
          const txt = String(markdown).trim();
          // If fetched content looks like HTML, inject it directly; otherwise treat
          // it as markdown and convert if `marked` is available.
          if (txt.startsWith('<') && (txt.includes('<html') || txt.includes('<!DOCTYPE') || txt.includes('<div') || txt.includes('<p') || txt.includes('<article'))) {
            // Try to extract the main content if possible (simple heuristic):
            // if page contains a <main> or .review content, prefer that.
            let injected = txt;
            try {
              const tmp = document.createElement('div');
              tmp.innerHTML = txt;
              const mainEl = tmp.querySelector('main') || tmp.querySelector('.review') || tmp.querySelector('#content') || tmp.querySelector('article');
              if (mainEl) injected = mainEl.innerHTML;
            } catch (e) {
              injected = txt;
            }
            modalReview.innerHTML = injected;
          } else {
            if (typeof marked !== 'undefined' && marked.parse) {
              modalReview.innerHTML = marked.parse(txt);
            } else {
              modalReview.textContent = txt;
            }
          }
        } else {
          modalReview.textContent = book.review_short || 'No review available yet.';
        }

        // focus the close button for accessibility
        const btn = modal.querySelector('[data-close]');
        if (btn) btn.focus();
      } catch (err) {
        console.error('[bookshelf] openModal error', err);
        modalReview.textContent = 'Error loading review.';
      }
    }

    function closeModal() {
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      if (lastFocused) lastFocused.focus();
      lastFocused = null;
    }

    modal.addEventListener('click', (e) => {
      if (e.target.matches('[data-close]') || e.target.classList.contains('backdrop')) {
        closeModal();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.getAttribute('aria-hidden') === 'false') {
        closeModal();
      }
    });
  })();
  </script>
