{% block pageScripts %}
<script>
    // Research section toggle
    const researchHeader = document.querySelector('.research-header');
    const researchContent = document.querySelector('.research-content');
    const toggleIcon = document.querySelector('.toggle-icon');
    const researchLink = document.querySelector('a[href="#research"]');

    researchHeader.addEventListener('click', () => {
        researchContent.classList.toggle('expanded');
        toggleIcon.classList.toggle('expanded');
    });

    researchLink.addEventListener('click', (e) => {
        e.preventDefault();
        const targetElement = document.getElementById('research');
        if (targetElement) {
            window.scrollTo({
                top: targetElement.offsetTop,
                behavior: 'smooth'
            });
            // Open the research section after scrolling
            setTimeout(() => {
                researchContent.classList.add('expanded');
                toggleIcon.classList.add('expanded');
            }, 500);
        }
    });

    // Back to top button visibility
    window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
            document.querySelector('.back-to-top').classList.add('visible');
        } else {
            document.querySelector('.back-to-top').classList.remove('visible');
        }
    });

    document.querySelector('.back-to-top').addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
</script>
